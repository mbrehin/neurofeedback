{% extends "base.njk" %} {% block content %}

<section class="site-contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <h1 class="site-contact-title">{{title}}<span>{{subTitle}}</span></h1>
      </div>
      <div class="col-lg-6 ml-auto">
        <div class="site-contact-form">
          <h4>{{formTitle}}</h4>
          <form name="contact" method="POST" data-netlify="true">
            <div class="row">
              <div class="col-lg-6">
                <input
                  type="text"
                  class="form-control"
                  name="first-name"
                  id="first-name"
                  placeholder="PrÃ©nom"
                />
              </div>
              <div class="col-lg-6">
                <input
                  type="text"
                  class="form-control"
                  name="last-name"
                  id="last-name"
                  placeholder="Nom"
                />
              </div>
              <div class="col-lg-12">
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="E-mail"
                />
              </div>
              <div class="col-12">
                <textarea
                  class="form-control"
                  id="aboutProject"
                  rows="6"
                  placeholder="Votre message"
                ></textarea>
              </div>
              <div class="col-12">
                <button
                  type="submit"
                  class="btn btn-primary"
                  formtarget="_blank"
                >
                  <span class="btn-area">
                    <span data-text="{{btnText}}"> {{btnText}} </span>
                  </span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %} {% block workTogether %}{% endblock %}
